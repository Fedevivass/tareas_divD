#include <stdio.h>
#include <stdlib.h>
#define PI 3.14

int main(void) {
	setbuf(stdout, NULL);
	int numero;

	const float PO = 3.14;

	numero = 4;


	printf ("El valor de numero es de: %d ", numero);


	printf ("El valor de po es de : %.2f ", PO );



}
