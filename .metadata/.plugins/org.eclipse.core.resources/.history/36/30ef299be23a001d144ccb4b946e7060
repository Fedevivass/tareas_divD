#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int nota;

	printf("Ingrese una nota entre 1 y 10");
	while (nota < 1 || nota > 10)
	{
		printf("ERROR, reingrese una nota entre 1 y 10");
	}


	printf("La nota ingresada es : %d", nota);

}
